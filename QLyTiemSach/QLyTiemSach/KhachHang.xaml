<Window x:Class="QLyTiemSach.KhachHang"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLyTiemSach"
        mc:Ignorable="d"
        Title="Quản Lý Khách Hàng" Height="550" Width="600">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <GroupBox Grid.Column="0" Grid.Row="0" Header="Thông tin khách hàng" Margin="10">
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="2*"/>
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Grid.Column="0" Grid.Row="0" Content="Mã khách hàng:" Margin="10"/>
                    <TextBox x:Name="txtMaKH" Grid.Column="1" Grid.Row="0" Margin="10"/>
                    <Label Grid.Column="0" Grid.Row="1" Content="Tên khách hàng:" Margin="10"/>
                    <TextBox x:Name="txtTenKH" Grid.Column="1" Grid.Row="1" Margin="10"/>
                    <Label Grid.Column="0" Grid.Row="2" Content="Địa chỉ:" Margin="10"/>
                    <TextBox x:Name="txtDiaChi" Grid.Column="1" Grid.Row="2" Margin="10"/>
                    <Label Grid.Column="0" Grid.Row="3" Content="Số điện thoại:" Margin="10"/>
                    <TextBox x:Name="txtSDT" Grid.Column="1" Grid.Row="3" Margin="10"/>
                    <Label Grid.Column="0" Grid.Row="4" Content="Tìm kiếm theo:" Margin="10"/>
                    <ComboBox x:Name="cbxLuaChon" Grid.Column="1" Grid.Row="4" Margin="10">
                        <ComboBoxItem Content="Mã khách hàng"/>
                        <ComboBoxItem Content="Tên khách hàng"/>
                        <ComboBoxItem Content="Địa chỉ"/>
                        <ComboBoxItem Content="Số điện thoại"/>
                    </ComboBox>
                    <Label Grid.Column="0" Grid.Row="5" Content="Từ khóa:" Margin="10"/>
                    <TextBox x:Name="txtKeyword" Grid.Column="1" Grid.Row="5" Margin="10"/>
                </Grid>
            </GroupBox>
            <GroupBox Grid.Column="1" Grid.Row="0" Header="Bảng chức năng" Margin="10">
                <WrapPanel  Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Button Click="btnThem_Click" x:Name="btnThem" Content="Thêm mới" Width="100" Margin="10"/>
                    <Button Click="btnSua_Click" x:Name="btnSua" Content="Sửa" Width="100" Margin="10"/>
                    <Button Click="btnXoa_Click" x:Name="btnXoa" Content="Xóa" Width="100" Margin="10"/>
                    <Button Click="btnTimKiem_Click" x:Name="btnTimKiem" Content="Tìm kiếm" Width="100" Margin="10"/>
                    <Button Click="btnLamMoi_Click" x:Name="btnLamMoi" Content="Làm mới" Width="100" Margin="10"/>
                    <Button Click="btnMenu_Click" x:Name="btnMenu" Content="Trở về Menu" Width="100" Margin="10"/>
                </WrapPanel>
            </GroupBox>
            <GroupBox Grid.Column="0" Grid.Row="1" Grid.ColumnSpan="2" Margin="10" Header="Bảng dữ liệu khách hàng">
                <DataGrid x:Name="DG_BangDuLieuKH" IsReadOnly="True" AutoGenerateColumns="False" Margin="5" SelectionChanged="DG_BangDuLieuKH_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Mã Khách Hàng" Binding="{Binding MaKH}" Width="*"/>
                        <DataGridTextColumn Header="Tên Khách Hàng" Binding="{Binding TenKH}" Width="*"/>
                        <DataGridTextColumn Header="Địa Chỉ" Binding="{Binding DiaChi}" Width="*"/>
                        <DataGridTextColumn Header="Số Điện Thoại" Binding="{Binding SDT}" Width="*"/>
                    </DataGrid.Columns>
                </DataGrid>
            </GroupBox>
        </Grid>
    </DockPanel>
</Window>
