<Window x:Class="QLyTiemSach.SearchSach"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QLyTiemSach"
        mc:Ignorable="d"
        Title="Search Sach" Height="170" Width="300">
    <StackPanel Background="LightSteelBlue">
        <TextBlock Text="Chọn tiêu chí:" Margin="0 0 0 5"/>
        <ComboBox x:Name="cbTieuChi" SelectedIndex="0" Background="AntiqueWhite" Margin="0 0 0 10">
            <ComboBoxItem Content="Mã Sách"/>
            <ComboBoxItem Content="Tên Sách"/>
            <ComboBoxItem Content="Tác Giả"/>
            <ComboBoxItem Content="Thể Loại"/>
        </ComboBox>

        <TextBlock Text="Nhập từ khóa:" Margin="0 0 0 5"/>
        <TextBox x:Name="txtTuKhoa" Margin="0 0 0 10"/>

        <Button Content="Tìm kiếm" Width="100" HorizontalAlignment="Center" Click="BtnTimKiem_Click" Background="LightGoldenrodYellow"/>
    </StackPanel>
</Window>
